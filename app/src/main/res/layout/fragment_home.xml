<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:baselineAligned="false"
            android:fontFamily="@font/letra"
            android:text="! VAMOS A ORDENAR TUS ACTIVIDADES DIARIAS !"
            android:textAlignment="center"
            android:textColor="#0C7AAC"

            android:textSize="30sp"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="164dp"
            android:layout_height="180dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="-50dp"
            android:src="@drawable/let" />

    </LinearLayout>
   <LinearLayout
        android:layout_marginLeft="30dp"
       android:layout_width="match_parent"
       android:layout_marginRight="30dp"
       android:layout_height="wrap_content">

       <EditText
           android:id="@+id/datos1"
           android:fontFamily="@font/letra2"
           android:layout_marginLeft="15dp"
android:padding="8dp"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:hint="Ingresa la actividad"
android:layout_gravity="center"
           android:textColor="@color/black"
           android:textSize="30sp"
           android:textStyle="bold"
           android:singleLine="true"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true">
       </EditText>

   </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_marginRight="30dp"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/horasel"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:clickable="true"
            android:fontFamily="@font/letra2"
            android:hint="Ingresa la fecha"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold">

        </TextView>

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:src="@drawable/fecha"

            android:tooltipText="@string/btn_nada"
            tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    </LinearLayout>
<LinearLayout
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
     android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/bt"
        android:fontFamily="@font/letra2"
        android:layout_marginLeft="15dp"
android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Ingresa la hora"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:clickable="true"
        android:textSize="30sp"
        />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:src="@drawable/reloj"

        android:tooltipText="@string/btn_nada"
        tools:ignore="SpeakableTextPresentCheck" />


</LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/bt3"
        android:textSize="20sp"
        android:background="#F65454"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:text="Registrar actividad" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:id="@+id/list"
        android:textSize="20sp"
        android:background="#EA86FC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VER ACTIVIDADES" />


</LinearLayout>